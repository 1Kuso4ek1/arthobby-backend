            "application/json"
          ],
          "parameters": [
            {
              "in": "body",
              "name": "body",
              "description": "User login object",
              "required": true,
              "schema": {
                "$ref": "#/definitions/UserLogin"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "successful operation"
            }
          }
        }
      },
      "/login": {
        "post": {
          "summary": "login user",
          "description": "",
          "operationId": "login",
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "in": "body",
